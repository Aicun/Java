package com.lac.codility;

public class CodilityPrefix {
	public static void main(String[] args) {
		int a[] = {1,0,1,1,0};
		int result = pasingCar(a);
		System.out.println(result);
	}

	public static int pasingCar(int []a){
		int ones = 0;
		int zeros = 0;
		int length = a.length;
		int count = 0;
		for(int i=0;i<length;i++){
			if(a[i]==0) zeros++;
		}
		ones = length-zeros;
		for(int i=0;i<length;i++){
			if(a[i]==0){
				count +=ones;
			}else{
				ones--;
			}
		}
		if(count>1000000000)
			count = -1;
		return count;
	}
}
