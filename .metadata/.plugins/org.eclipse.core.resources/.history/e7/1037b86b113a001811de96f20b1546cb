package com.lac.savinguniverse;

import java.io.InputStreamReader;
import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
		Scanner in = new Scanner(new InputStreamReader(System.in));
		int t = in.nextInt(); // Scanner has functions to read ints, longs, strings, chars, etc.
		for (int i = 1; i <= t; ++i) {
			int n = in.nextInt();
			String m = in.next();
		}
	}
	
	public static int clculateMoves(int withstand, String program) {
		
		int moves = 0;
		
		int ps = countRobotShoots(program);
		
		if(ps < withstand) {
			moves = 0;
		}
		
		return moves;
	}
	
	public static int countRobotShoots(String program)
	{
		char[] cs = program.toCharArray();
		int count = 0;
		int shoot = 1;
		for (char c : cs) {
			if(c == 'C') {
				shoot = shoot *2;
			}
			if (c == 'S') {
				count += shoot;
			}
		}
		return count;
	}
}
